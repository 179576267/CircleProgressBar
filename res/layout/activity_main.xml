<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.circleprogressbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01B3B3"
    tools:context="com.example.circleprogressbar.MainActivity" >

    <com.example.circleprogressbar.CircleImageProgressBar
        android:id="@+id/circleProgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:bordercolor="#D35246"
        app:strokeWidth="2dp"
        app:src="@drawable/icon_60pt" />

</RelativeLayout>